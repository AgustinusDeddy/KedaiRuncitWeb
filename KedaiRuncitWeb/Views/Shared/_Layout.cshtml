<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - eRuncit</title>

	<link href="~/dist/css/site.min.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />

	<script src="~/vendor/jquery/jquery.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
			<a class="navbar-brand">eRuncit</a>
			<button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="False" aria-label="Toggle Navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse" id="navbarCollapse">
				<ul class="navbar-nav" style="margin-right: auto !important;">
					<li>
						<a class="nav-link">Home</a>
						<span class="sr-only">(current)</span>
					</li>
				</ul>
			</div>
		</nav>
	</header>


	<main role="main">
		@RenderBody()
	</main>

	<footer class="esh-app-footer">

		<div> eRuncit - @DateTime.Now.Year </div>

	</footer>

	@RenderSection("scripts", required: false)
</body>
</html>
