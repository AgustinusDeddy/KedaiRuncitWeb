<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - eRuncit</title>

</head>
<body>
	<header class="navbar navbar-light navbar-static-top">
		<div class="container">
			<article class="row">
				<section class="col-lg-7 col-md-6 col-xs-12">
					<a asp-area="" asp-controller="Catalog" asp-action="Index" class="navbar-brand">
						<img src="../images/brand.png" alt="eShop On Web" />
					</a>
				</section>
				<partial name="_LoginPartial" />
			</article>
		</div>
	</header>

	@RenderBody()

	<footer class="esh-app-footer">
		<div class="container">
			<article class="row">
				<section class="col-sm-6"></section>
				<section class="col-sm-6">
					<div class="esh-app-footer-text hidden-xs"> eRuncit - @DateTime.Now.Year </div>
				</section>
			</article>
		</div>
	</footer>
	
	@RenderSection("scripts", required: false)
</body>
</html>
